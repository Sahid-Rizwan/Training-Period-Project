extend layout
block body
    .main-container

    #main-content
      #loginFormContent
        h1 Login
        form#loginForm
          input(type="text", id="login-clg-code", name="login-clg-code", placeholder="Collegecode")
          small#login-clg-code-req.login-hidden

          input(type="email", id="login-email", name="login-email", placeholder="Email")
          small#login-email-req.login-hidden

          input(type="password", id="login-pass", name="login-pass", placeholder="Passcode")
          small#login-pass-req.login-hidden

          button#login-btn Sign in

          p
            | New to this? 
            a.changeForm(href="#", onclick="openSignUpForm()") Sign Up Here

